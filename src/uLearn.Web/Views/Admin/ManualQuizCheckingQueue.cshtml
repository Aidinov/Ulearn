@using Ulearn.Common
@using Ulearn.Common.Extensions
@model uLearn.Web.Controllers.ManualCheckingQueueViewModel

@{
	ViewBag.Title = "Очередь на проверку";
}

<div class="container">
	<h1>Очередь на проверку</h1>

	@Html.Partial("_ManualCheckingQueueFilterForm", Model)

	@if (!string.IsNullOrEmpty(Model.Message) && Model.Checkings.Count > 0)
	{
		<div class="alert alert-danger">
			@if (Model.Message == "already_checked")
			{
				<p>Эта работа уже проверена, выберите другую</p>
			}
			@if (Model.Message == "locked")
			{
				<p>Эта работа проверяется другим преподаваталем, выберите другую</p>
			}
			@if (Model.Message == "slide_checked")
			{
				<p>Для этого слайда больше нет непроверенных работ</p>
			}
			@if (Model.Message == "time_is_over")
			{
				<p>Время проверки вышло. Выберите другую работу</p>
			}
            @if (Model.Message == "checking_removed")
            {
	            <p>Студент отправил новое решение этого теста. Старое больше недоступно для проверки</p>
            }
		</div>
	}

	@if (Model.Checkings.Count == 0)
	{
		if (Model.AlreadyChecked)
		{
			<hr/>
			<div class="text-muted">Здесь будут проверенные преподавателями тесты. Пока их нет.</div>
		}
		else
		{
			<hr />
			<div class="text-muted">Здесь будут появляться ответы студентов на тесты, которые должны быть проверены преподавателем вручную.</div>
			<div><b>Поздравляем, очередь пуста! Работ для проверки нет.</b></div>
		}
	}

	@foreach (var checkModel in Model.Checkings)
	{
		var checking = checkModel.CheckingQueueItem;
		<div>
			<div>
				<p>
					<b>@checking.User.VisibleName</b> заполнил@(checking.User.Gender.ChooseEnding()) тест «@checkModel.ContextSlideTitle.MakeNestedQuotes()»
				</p>
			</div>
			<div>
				@if (Model.AlreadyChecked)
				{
					<p>
						Последний раз проверялась преподавателем <b>@checking.LockedBy.VisibleName</b>
						<span class="label label-xs label-default">
							@checking.Score из @checkModel.ContextMaxScore.PluralizeInRussian(RussianPluralizationOptions.Score)
						</span>
					</p>
					<p>
						@Html.ActionLink("Посмотреть", "CheckQuiz", new { Model.CourseId, checking.Id, Group = Model.SelectedGroupsIdsJoined, recheck = true }, new { @class = "btn btn-sm btn-info" })
					</p>
				}
				else if (checking.IsLocked)
				{
					<p>
						Проверяется преподавателем <b>@checking.LockedBy.VisibleName</b>,
						заблокирована ещё на&nbsp;@{
							                     var minutes = (int)(checking.LockedUntil.Value - DateTime.Now).TotalMinutes;
							                     @minutes.PluralizeInRussian(RussianPluralizationOptions.MinuteDative)
						                     }
					</p>
					if (checking.IsLockedBy(User.Identity))
					{
						@Html.ActionLink("Вернуться к проверке →", "CheckQuiz", new { Model.CourseId, checking.Id, group = Model.SelectedGroupsIdsJoined }, new { @class = "btn btn-sm btn-primary" })
					}
				}
				else
				{
					@Html.ActionLink("Перейти к проверке →", "CheckQuiz", new { Model.CourseId, checking.Id, group = Model.SelectedGroupsIdsJoined }, new { @class = "btn btn-sm btn-success" })
				}
			</div>
			<hr/>
		</div>
	}

	@if (Model.ExistsMore)
	{
		<div class="alert alert-info">Показаны последние 500 работ</div>
	}
</div>
