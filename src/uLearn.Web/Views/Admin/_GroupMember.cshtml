@using uLearn
@using uLearn.Web.Extensions
@using uLearn.Web.Views.Shared
@model Database.Models.GroupMember

<li class="group__member">
	<div>
		<div class="pull-right">
			<a href="@Url.Action("RemoveUserFromGroup", "Admin", new { groupId = Model.GroupId, userId = Model.UserId })" class="group__member__remove-link" title="Удалить из группы">&times;</a>
		</div>

		@UserAvatar.ExtraSmallAvatar(Model.User)
		@Model.User.VisibleName
		@if (Model.AddingTime.HasValue)
		{
			<span class="group__member__since">вступил@(Model.User.Gender.ChooseEnding()) @Model.AddingTime.Value.ToAgoPrettyString()</span>
		}
	</div>
</li>
