@model CourseInstructorNavbarViewModel

@if (Model != null)
{
	<li><a href="@Url.RouteUrl("Course.Slide", new { Model.CourseId })">@Model.CourseTitle</a></li>
	<li class="dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-cog"></span></a>
		<ul class="dropdown-menu">
			<li>@Html.ActionLink("Группы", "Groups", "Admin", new { Model.CourseId }, new { })</li>
			@if (User.HasAccessFor(Model.CourseId, CourseRole.CourseAdmin))
			{
				<li>@Html.ActionLink("Пользователи", "Users", "Admin", new { Model.CourseId }, new { })</li>
				<li>@Html.ActionLink("Пакеты", "Packages", "Admin", new { Model.CourseId }, new { })</li>
				<li>@Html.ActionLink("Модули", "Units", "Admin", new { Model.CourseId }, new { })</li>
			}
			<li class="divider" role="separator"></li>
			<li>@Html.ActionLink("Комментарии", "Comments", "Admin", new { Model.CourseId }, new { })</li>
			<li>@Html.ActionLink("Очередь на проверку", "ManualQuizChecksQueue", "Admin", new { Model.CourseId }, new { })</li>
		</ul>
	</li>
}