@using uLearn
@using Ulearn.Core
@model IntructorNoteModel

@{
	ViewBag.Title = "Заметки преподавателю";
}


@Html.Action("TableOfContents", "SlideNavigation", new { courseId = Model.CourseId })

<div class="slide-container">
	<div class="container body-content">
		<div class="row">
			<div class='slide'>
				<h1>Заметки преподавателю <small>@Model.Note.Unit.Title</small>
				</h1>
				<hr/>
				@Html.Raw(Model.Note.Markdown.RenderMd(Model.Note.File))
			</div>
		</div>
	</div>
</div>
